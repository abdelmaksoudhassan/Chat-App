{{> start}}

<div class="profile">
    <div id="side-nav" style="display: none;">
    <div id="opactity" class="opactity"></div>
    <div class="side position-fixed top-0 start-0">
        <div class="row">
            <button type="button" id="logoutBtn" class="col btn btn-danger btn-sm" style="margin: 5px;">
                Logout
            </button>
            <button type="button" id="hideBtn" class="col btn btn-warning btn-sm" style="margin: 5px;">
                Hide
            </button>
        </div>
        <h4>online contacts</h4>
        <ol class="online-list">
            {{#each onlineList}}
                <li class="online">{{this}}</li>
            {{/each}}
        </ol>
    </div>
</div>
    <div class="col">
        <div class="bg-primary text-light" style="padding: 8px 0px">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                <span class="email col col-sm-auto"> {{email}} </span>
                <button class="btn btn-light text-primary col-auto col-sm-auto w-auto" type="button" id="listBtn">
                    online list
                </button>
            </div>
            </div>
        </div>
        <div class="splitter"></div>
        <div id="rooms-sec" class="row justify-content-center align-items-center h-100">
            <div class="col-sm-10">
                <div class="shadow p-3 mb-5 bg-body-tertiary rounded">
                    <h6>My rooms:</h6>
                    <ol id="myRooms" class="list-group list-group-flush"></ol>
                </div>
            </div>
        </div>
            
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-sm-10">
                <form id="room-form" oninput="validateRoomForm()" class="shadow p-3 mb-5 bg-body-tertiary rounded">
                    <div class="mb-3">
                        You can create room or enter any room with code and password
                    </div>
                    <div class="mb-3">
                        <input onfocus="clrErr('room')" type="text" maxlength="4" placeholder="Room Code" name="code" class="form-control" id="inputCode" >
                        <div id="codeHelpBlock" class="form-text">Code must be 4 digits and unique</div>
                        <div id="code-err" class="code-error"></div>
                    </div>

                    <div class="mb-3">
                        <input onfocus="clrErr('room')" type="password" placeholder="Password" name="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock" >
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </div>
                    </div>
                    <div class="mb-3">
                        <div id="room-err" class="room-error"></div>
                    </div>

                    <div class="mb-3">
                        <button id="joinBtn" type="button" class="btn btn-primary">Join Room</button>
                        <button id="createBtn" type="button" class="btn btn-danger" disabled>Create Room</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> end}}