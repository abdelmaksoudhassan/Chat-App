{{> start}}

<div class="profile">
    <div class="side">
        <h4>online contacts</h4>
        <ol class="online-list">
            {{#each onlineList}}
                <li class="online">{{this}}</li>
            {{/each}}
        </ol>
    </div>
    <div style="width: 20%;"></div>
    <div class="body">
        <div class="header">
            <span class="email"> {{email}} </span>
            <button type="button" id="logoutBtn" class="btn btn-warning">Logout</button>
        </div>
        <div>
            <ol id="myRooms" class="my-rooms"></ol>
            <br/>
            <div class="room-form">
                <h4>Room form</h4>
                You can create room or enter any room with code and password
                <form id="room-form" oninput="validateRoomForm()" class="room-form">
                    <div class="mb-3">
                        <input type="text" maxlength="4" placeholder="Room Code" name="code" class="form-control" id="inputCode" >
                        <div id="codeHelpBlock" class="form-text">Code must be 4 digits and unique</div>
                        <div id="code-err" class="code-error"></div>
                    </div>

                    <div class="mb-3">
                        <input type="password" placeholder="Password" value="Ss#123456" name="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock" >
                        <div id="passwordHelpBlock" class="form-text">
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </div>
                    </div>
                    <div class="mb-3">
                        <div id="room-err" class="room-error"></div>
                    </div>

                    <div class="mb-3">
                        <button id="joinBtn" type="button" class="btn btn-enter">Join Room</button>
                        <button id="createBtn" type="button" class="btn btn-danger" disabled>Create Room</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> end}}