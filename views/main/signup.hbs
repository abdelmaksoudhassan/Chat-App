{{> start}}

<div class="row justify-content-center align-items-center h-100">
    <div class="col-sm-10">
        <form id="signup-form" oninput="validateSignupForm()" class="shadow p-3 mb-5 bg-body-tertiary rounded">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email address</label>
                <input onfocus="clrErr('signup')" type="email" name="email" class="form-control" id="inputEmail">
                <div id="emailHelpBlock" class="form-text">
                    Your email must be valid and unique
                </div>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input onfocus="clrErr('signup')" type="password" name="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock" >
                <div id="passwordHelpBlock" class="form-text">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </div>
            </div>
            <div class="mb-3">
                <div id="signup-err" class="signup-error"></div>
            </div>
            <div class="mb-3">
                <a class="link-opacity-100" href="/login">Already have an account</a>
            </div>

            <div class="mb-3">
                <button id="submitBtn" type="submit" class="btn btn-primary" disabled>Signup</button>
                <button id="resetBtn" type="reset" class="btn btn-danger">Reset</button>
            </div>
        </form>
    </div>
</div>

{{> end}}